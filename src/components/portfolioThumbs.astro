---
interface Props {
    photo: string;
    biz: string;
    location: string;
    reverse?: boolean;
}

const { biz, location, photo, reverse=false } = Astro.props;
---

<div class="row">
    <div class:list={['col-12', 'col-lg-6']} data-aos="fade-right" data-aos-duration="2200" data-aos-offset="200">
        <div class="portfolio-thumb" style={{backgroundImage: `url(${ photo })` }}>{ biz }</div>
    </div>
    <div class:list={['col-12', 'col-lg-6', 'middle-text', 'justify-content-center']} data-aos="fade-left" data-aos-duration="2200" data-aos-offset="200">
        <h4 data-location={ location }>{ biz }</h4>
    </div>
</div>

<style lang="scss">
    .row {
        margin: 200px 0;
        @media (max-width: 800px){
            padding: 0;
            margin-top: 10px;
        }
    }

    .middle-text {
        display: flex;
        align-items: center;

        h4 {
            font-family: var(--fh-ff-cinzel);
            margin: 0;
            font-size: 24px;
            color: white;

            &::after {
                content: attr(data-location);
                font-family: var(--fh-ff-raleway);
                text-transform: uppercase;
                font-size: 12px;
                color: rgba(255, 255, 255, 0.5);
                display: block;
            }
        }
    }

    .portfolio-thumb {
        display: block;
        max-width: 100%;
        width: 100%;
        height: 400px;
        background-color: black;
        text-align: center;
        vertical-align: middle;
        margin: 0 auto;
        color: transparent;
        background-size: cover;
        background-position: center;

        @media (max-width: 800px){
            margin-bottom: 0;
            height: 220px;
        }
    }
</style>