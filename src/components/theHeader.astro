---
import LogoIcon from "./svg/LogoIcon.astro"
---
<header>
    <div class="logo">
        <a href="/"><LogoIcon /></a>
    </div>
    <div class="menu-icon">
        <div class="line line-1"></div>
        <div class="line line-2"></div>
        <div class="line line-3"></div>
    </div>
</header>

<style lang="scss">
    header {
        display: flex;
        width: 100%;
        justify-content: space-between;
        padding: 40px 40px 20px;
        overflow: hidden;
        position: sticky;
        box-sizing: border-box;
        top: 0;
        left: 0;
        z-index: 99;
        background-color: rgb(3 3 2 / 0.5);
        backdrop-filter: blur(3px);
        
        &.change-color {
            background-color: unset;
            backdrop-filter: blur(0);
        }

        @media (max-width: 75em){
            padding: 20px 20px;
        }

        .logo {
            display: block;
            width: 70px;
        }

        .menu-icon {
            display: flex;
            width: 40px;
            height: 21px;
            position: relative;
            flex-direction: column;
            justify-content: space-between;
            align-items: end;
            cursor: pointer;
            top: 15px;

            &.icon-close {
                display: block;
                .line-2 {
                    opacity: 0;
                }
                .line-1 {
                    width: 100%;
                    transform: rotate(-45deg);
                }
                .line-3 {
                    width: 100% !important;
                    transform: rotate(45deg);
                }

                &:hover {
                    .line {
                        background-color: rgb(255 255 255 / 0.4);
                        width: 100%;
            
                        &.line-2 {
                            width: 100%;
                        }
            
                        &.line-3 {
                            width: 100%;
                        }
                    }
                }
            }
        
            .line {
                display: block;
                background-color: rgb(255 255 255);
                width: 100%;
                height: 1px;
                top: 0;
                right: 0;

                &.line-2 {
                    width: 30%;
                }

                &.line-3 {
                    width: 60%;
                }
            }

            &:hover {
                .line {
                    display: block;
                    background-color: rgb(255 255 255 / 0.4);
                    width: 30%;
                    height: 1px;
                    top: 0;
                    right: 0;
        
                    &.line-2 {
                        width: 100%;
                    }
        
                    &.line-3 {
                        width: 50%;
                    }
                }
            }
        }
    }
</style>