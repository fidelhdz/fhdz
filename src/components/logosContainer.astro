---
interface LogosArrayProps {
    title: string;
    logosArray: Array<string>;
}

const { title, logosArray } = Astro.props as LogosArrayProps;
---
<section class="fh-companies-section">
    <div class="container">
        <div class="row pt-6 pb-6">
            <div class="col-12">
                <h2 class="text-center" data-aos="fade">{ title }</h2>

                <div class="logos-container">
                    { logosArray.map((value:string, index:number) => (
                        <div class="logo-cia" data-aos="fade-down" data-aos-delay={200*index} style={{ backgroundImage: `url(${value[1]}` }}>{value[0]}</div>
                    )) }
                </div>
            </div>
        </div>
    </div>
</section>

<style lang="scss">
    .fh-companies-section {

        h2.text-center {
            position: relative;
            color: var(--fh-color-light);

            &::after{
                content: '';
                width: 100px;
                height: 1px;
                background-color: rgb(3 3 2 / 0.5);
                display: block;
                position: absolute;
                left: 50%;
                top: -30px;
                transform: translate(-50%);

                @media (max-width: 75em){
                    display: none;
                }
            }
        }

        .logos-container {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            grid-template-rows: auto;
            justify-items: center;
            width: 100%;
            justify-content: space-around;

            @media (max-width: 75em){
                grid-template-columns: 1fr 1fr;
            }
            row-gap: 60px;
            margin: 60px 0 30px;

            .logo-cia {
                width: 150px;
                height: 100px;
                // background-color: gray;
                display: block;
                color: transparent;
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;
                background-image: url('assets/images/resume/companies/logo-altimetrik.webp');
            }
        }
    }
</style>